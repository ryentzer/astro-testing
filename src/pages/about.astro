---
import '../styles/global.css'

const pageTitle = 'About me!';
const identity = {
    firstName: 'Rick',
    lastName: 'Yentzer',
    occupation: 'Web Developer/Designer',
    country: 'USA',
    hobbies: ['coding', 'reading my bible', 'disc golf']
}

const skills = ['HTML', 'CSS', 'JavaScript', 'React', 'Astro', 'PHP'];
const hobbyColor = 'salmon';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{hobbyColor}}>
		    h1 { color: purple; font-size: 3rem; }
		    .skill {
		        color: green;
		    }
		    .hobby {
		        background: var(--hobbyColor)
		    }
		</style>
	</head>
	<body>
		<h1>Whoami:</h1>
		<p>My name is {identity.firstName} {identity.lastName}.</p>
		<p>I live in the {identity.country} and work as a {identity.occupation}.</p>
		<p>My hobbies include: {identity.hobbies.length >= 2 && <span><em class="hobby">{identity.hobbies[0]}</em> and <em>{identity.hobbies[1]}</em></span>}</p>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
	</body>
</html>
